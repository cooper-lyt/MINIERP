            <method name="open"><![CDATA[

it=orderItems.iterator();]]></method>
            <method name="fetch"><![CDATA[if (it.hasNext()){
	item = it.next();
	itemTitle = item.getUseRes().getName() + " ";
	
	
	if (item.isStoreResItem()){
		storeRes = item.getStoreRes();
		formats = storeRes.getFormatList(); 
		for(i=0;i++;i<formats.size() -1){
			format = formats.get(i);
			itemTitle += format.getFormatDefine().getName() + ":";
			if (format.getFormatDefine().getDataType().equals(FormatDefine.FormatType.WORD)){
				itemTitle += dictionary.getWordValue(format.getFormatValue());
			}else{
				itemTitle += format.getFormatValue();
			}						
		}
		if (item.getUseRes().getUnitGroup().getType().equals(UnitGroup.UnitGroupType.FLOAT_CONVERT)){
			
			itemTitle +=  BigDecimalFormat.format(storeRes.getFloatConversionRate(),item.getUseRes().getUnitGroup().getFloatConvertRateFormat());
			itemTitle += item.getUseRes().getUnitGroup().getName();
		}
		
	}
	
	row['NAME'] = itemTitle;
    

    if (first){
    	row['UNIT'] = item.getUseUnit().getName();
    	row['COUNT'] = BigDecimalFormat.format(item.getCount(),item.getUseUnit().getCountFormate());
    	row['TOTAL_PRICE'] = item.getTotalPrice();
    	row['PRICE'] = item.getUnitPrice();
    }else{
    	row['UNIT'] = item.getMoneyUnit().getName();
    	row['COUNT'] = BigDecimalFormat.format(item.getCount(),item.getMoneyUnit().getCountFormate());
    	row['TOTAL_PRICE'] = item.getTotalMoney();
    	row['PRICE'] = item.getMoney();
    }
    
    
    
    row['ITEM_INFO'] = itemTitle + "  " + row['COUNT'] + "  " + row['UNIT'];

	return true;
}else{
	return false;
}]]></method>

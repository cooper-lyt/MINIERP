        <script-data-source name="Data Source" id="9">
            <method name="open"><![CDATA[importPackage(Packages.java.lang);
importPackage(Packages.org.jboss.seam);  
importPackage(Packages.com.dgsoft.erp.model); 
importPackage(Packages.com.dgsoft.common.utils.math); 
dictionary = Component.getInstance("dictionary", false)
first = params["first"].value;
if (first)
{
	salerName = Component.getInstance("authInfo", false).getLoginEmployee().getPerson().getName(); 
	orderItems = Component.getInstance("orderCreate", false).getOrderNeedItems();
	saleDate = new Date();
	orderNumber = Component.getInstance("startData", false).getBusinessKey();
	saleAreaName = Component.getInstance("customerAreaHome", false).getInstance().getName();
	customerName = Component.getInstance("customerHome", false).getInstance().getName();
}else{
	
	orderHome = Component.getInstance("orderHome",false);
	if (orderHome == null){
		orderHome = Component.getInstance("orderHome",true);
		orderHome.setId(params["orderId"].value);
	}
	orderItems = Component.getInstance("orderHome",false).getMasterNeedRes().getOrderItemList();
	salerName = dictionary.getEmpNameById(orderHome.getInstance().getOrderEmp());
	saleDate = orderHome.getInstance().getCreateDate();
	orderNumber = orderHome.getInstance().getId();
	saleAreaName = orderHome.getInstance().getCustomer().getCustomerArea().getName();
	customerName = orderHome.getInstance().getCustomer().getName();
}]]></method>

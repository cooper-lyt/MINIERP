<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd">

    <action execute="#{defaultTaskOperate.init}"/>


    <navigation from-action="#{defaultTaskOperate.complete}">
        <rule if-outcome="success">
            <redirect view-id="/func/system/business/task.xhtml"/>
        </rule>
        <rule if-outcome="fail">
            <redirect view-id="/func/system/business/taskOperate.xhtml">
                <message severity="ERROR">
                    #{messages.completeTaskFail}
                </message>
            </redirect>

        </rule>
    </navigation>

</page>